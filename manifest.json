{
   "manifest_version": 2,
   "name": "Myzuka.fm download helper",
   "version": "2.3",

   "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
   },

   "content_scripts": [{
      "matches": ["*://*.myzuka.me/*",
                    "*://*.imyz.me/*",
                    "*://jetune.fm/*",
                    "*://myzcloud.me/*",
                    "*://myzcloud.club/*",
                    "*://myzcloud.pro/*"
                ],
      "js": ["content.js"],
      "css": []
   }],

   "permissions": [
      "tabs"
   ],

   "browser_action": {
      "default_title": "Myzuka.fm download helper",
      "default_icon": "icon.png"
   }
}