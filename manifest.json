{
   "manifest_version": 2,
   "name": "Myzuka.fm download helper",
   "version": "1.4",

   "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
   },

   "content_scripts": [{
      "matches": ["http://myzuka.fm/*", "http://myzuka.me/*", "https://imyz.me/*"],
      "js": ["content.js"],
      "css": []
   }],

   "permissions": [
      "tabs"
   ],

   "browser_action": {
      "default_title": "Myzuka.fm download helper",
      "default_icon": "icon.png"
   }
}